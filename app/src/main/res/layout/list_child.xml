<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/drawable_white_solid_et_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10dp"
            android:layout_marginStart="@dimen/_10dp"
            android:layout_marginTop="@dimen/_5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_30dp"
                android:layout_marginStart="@dimen/_30dp"
                android:layout_marginTop="@dimen/_5dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_visitor_contact"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40dp"
                    android:background="@android:color/transparent"
                    android:focusable="false"
                    android:hint="@string/visitor_contact"
                    android:inputType="number"
                    android:maxLength="10"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_7dp"
                    android:background="@color/colorPrimary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_30dp"
                android:layout_marginStart="@dimen/_30dp"
                android:layout_marginTop="@dimen/_5dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_vehicle_type"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40dp"
                    android:background="@android:color/transparent"
                    android:drawableRight="@drawable/ic_action_hardware_keyboard_arrow_down"
                    android:focusable="false"
                    android:hint="@string/vehicle_type"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_7dp"
                    android:background="@color/colorPrimary" />

                <LinearLayout
                    android:id="@+id/ll_alien"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="@dimen/_50dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_50dp"
                            android:layout_height="@dimen/_40dp"
                            android:layout_gravity="center"
                            android:src="@drawable/abc_big" />

                        <View
                            android:layout_width="@dimen/_47dp"
                            android:layout_height="@dimen/_1dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_7dp"
                            android:background="@color/colorPrimary" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="0.9"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_5dp"
                            android:layout_marginStart="@dimen/_5dp"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <EditText
                                android:id="@+id/et_vehicle_num"
                                android:layout_width="@dimen/_0dp"
                                android:layout_height="@dimen/_40dp"
                                android:layout_weight="0.8"
                                android:background="@android:color/transparent"
                                android:hint="@string/enter_vehicle_number"
                                android:lines="1"
                                android:maxLength="20"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_14sp" />

                            <TextView
                                android:id="@+id/tv_scanner"
                                android:layout_width="0px"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0.2"
                                android:gravity="center"
                                android:padding="@dimen/_3dp"
                                android:text="@string/camera_icon"
                                android:textSize="@dimen/_15sp" />

                        </LinearLayout>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_7dp"
                            android:background="@color/colorPrimary" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40dp"
                android:layout_margin="@dimen/_10dp"
                android:background="@drawable/submit_icon"
                android:text="@string/submit"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sp" />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>