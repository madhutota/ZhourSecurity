<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_10dp"
        android:background="@drawable/round_rectangel"
        android:orientation="vertical"
        android:padding="@dimen/_15dp"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/ll_move_in"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_gravity="top"
            android:layout_weight="0.5"
            android:background="@drawable/move_in_back"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_in"
                android:layout_width="@dimen/_150dp"
                android:layout_height="@dimen/_150dp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_15dp"
                android:scaleType="fitXY"
                android:src="@drawable/movein" />

            <TextView
                android:id="@+id/tv_move_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="IN - GATE"
                android:textColor="@color/black"
                android:textSize="@dimen/_20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_15dp"
            android:background="@color/transparent" />

        <LinearLayout
            android:id="@+id/ll_move_out"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_gravity="bottom"
            android:layout_weight="0.5"
            android:alpha="0.6"
            android:background="@drawable/white_drawble_bottom"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_out"
                android:layout_width="@dimen/_150dp"
                android:layout_height="@dimen/_150dp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_15dp"
                android:scaleType="fitXY"
                android:src="@drawable/moveout" />

            <TextView
                android:id="@+id/tv_move_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="OUT - GATE"
                android:textColor="@color/black"
                android:textSize="@dimen/_20sp"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
